{
  "description": "Native messaging add-on to interact with tabs and bookmarks in Zen Browser",
  "manifest_version": 2,
  "name": "zenner",
  "version": "0.1",
  "icons": {
    "48": "icons/logo.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zenner@synaptiko.cz",
      "strict_min_version": "130.0"
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/logo.svg"
  },
  "permissions": ["nativeMessaging", "tabs", "sessions", "bookmarks"]
}
